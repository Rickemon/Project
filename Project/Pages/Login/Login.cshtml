@page
@model Project.Pages.Login.LoginModel
@{
}
<h1>:: Login Page ::</h1>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label class="control-label">Login</label>
                <input type="text" asp-for="Users.Username" class="form-control" />
                <span asp-validation-for="Users.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Users.Password" class="control-label">Password</label>
                <input asp-for="Users.Password" type="password" class="form-control" />
                <span asp-validation-for="Users.Password" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

        </form>

        <div>
            <p style="color: red">@Model.Message</p>
        </div>
    </div>
</div>

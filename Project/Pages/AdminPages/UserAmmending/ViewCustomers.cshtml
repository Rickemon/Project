@page
@model Project.Pages.AdminPages.UserAmmending.ViewCustomers
@{
}

<h1>:: View Customers ::</h1>
<br />
<br />

<div>
    <table class="table table-active">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customers[0].Role)
                </th>
                <th>
                    Actions
                </th>


                <continue!>

            </tr>
        </thead>


        @for (int i = 0; i < Model.Customers.Count; i++)
        {
    <tr>
        <td>@Model.Customers[i].Username</td>
        <td>@Model.Customers[i].Password</td>
        <td>@Model.Customers[i].Name</td>
        <td>@Model.Customers[i].Address</td>
        <td>@Model.Customers[i].Role</td>
        <td>
            <a asp-page="/AdminPages/UserAmmending/UpdateCustomer" asp-route-id="@Model.Customers[i].Username">Update</a>
            <a asp-page="/AdminPages/UserAmmending/DeleteCustomer" asp-route-id="@Model.Customers[i].Username">Delete</a>
        </td>
        <continue!>
    </tr>
        }
    </table>
</div>
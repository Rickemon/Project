@page
@model Project.Pages.Deliveries.UpdateOrder
@{
}

<h1>:: Update Stock Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <label asp-for="Orders.OrderID"></label>
                <span> : </span>
                @Model.Orders.OrderID 
                <input type="hidden" asp-for="Orders.OrderID" />
            </div>
            <div>
                <label asp-for="Orders.Username"></label>
                <span> : </span>
                @Model.Orders.Username 
                <input type="hidden" asp-for="Orders.Username" />
            </div>
            <div class="form-group">
                <label asp-for="Orders.ScheduledDeliveryDate" class="control-label"></label>
                <input type="text" asp-for="Orders.ScheduledDeliveryDate" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Commit" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


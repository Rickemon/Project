@page
@model Project.Pages.Customer.UpdateCustomer
@{
}

<h1>:: Update Customer Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Customer.OriginalUserName" />
            <div class="form-group">
                <label asp-for="Customer.Username" class="control-label"></label>
                <input type="text" asp-for="Customer.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input type="text" asp-for="Customer.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <input type="text" asp-for="Customer.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label"></label>
                <input type="text" asp-for="Customer.Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Customer.Role" class="control-label"></label>
                <input type="text" asp-for="Customer.Role" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


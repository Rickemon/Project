@page
@model Project.Pages.Customer.Create
@{
}

<h1>;; User Sign UP ::</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="Users.Username" class="form-control" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="text" asp-for="Users.Password" class="form-control" />
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="Users.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input type="text" asp-for="Users.Address" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

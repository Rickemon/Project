@page
@model Project.Pages.AdminPages.OrderDetailsAmmending.UpdateOrderDetails
@{
}

<h1>:: Update Order Details Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <input type="hidden" asp-for="Items.Order_ID" />
                <label asp-for="Items.Order_ID"></label>
                <span> : </span>
                @Model.Items.Order_ID
            </div>

            <div>

                <label asp-for="Items.Username"></label>
                <span> : </span>
                @Model.Items.Username
            </div>

            <div>

                <input type="hidden" asp-for="Items.Product_ID" />
                <label asp-for="Items.Product_ID"></label>
                <span> : </span>
                @Model.Items.Product_ID
            </div>

            <div>

                <label asp-for="Items.ProductName"></label>
                <span> : </span>
                @Model.Items.ProductName
            </div>

            <div class="form-group">
                <label asp-for="Items.Quantity" class="control-label"></label>
                <input type="text" asp-for="Items.Quantity" class="form-control" />
            </div>

            <div>
                <input type="submit" value="Commit" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


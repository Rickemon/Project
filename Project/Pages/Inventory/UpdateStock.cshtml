}

<h1>:: Update Stock Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Items.ProductID" />
            <div class="form-group">
                <label asp-for="Items.ProductName" class="control-label"></label>
                <input type="text" asp-for="Items.ProductName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Items.Price" class="control-label"></label>
                <input type="text" asp-for="Items.Price" class="form-control" />
            </div
            <div>
                <input type="submit" value="Commit" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


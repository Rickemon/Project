@page
@model Project.Pages.UserPages.PlaceOrderModel
@{
}
<h1>:: View Catalog ::</h1>
<br />
<br />

<div>
    <form method="post">
        <table class="table table-active">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Items[0].ProductID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items[0].ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items[0].Price)
                    </th>
                    <th>
                        Order Quantity
                    </th>


                    <continue!>

                </tr>
            </thead>


            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>@Model.Items[i].ProductID</td>
                    <td>@Model.Items[i].ProductName</td>
                    <td>@Model.Items[i].Price</td>
                    <td>
                        <input type="number" asp-for="@Model.OrderDetails[i].Quantity" class="form-control" />
                    </td>
                    <continue!>
                </tr>
            }
        </table>
        <div class="form-group">
            <label>Delivery Date</label>
            <input type="datetime-local" asp-for="Order.ScheduledDeliveryDate" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Create" class="btn btn-secondary" />
        </div>
        </form>
</div>